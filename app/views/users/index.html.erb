<h1> List of users </h1>

<table border = "1">
<tr>
  <th>
    Username
  </th>
  
  <th>
    Private?
  </th>
  
  <th>
  Follow?
  </th>
  
  <th>
  User Profile
  </th>
</tr>

<% @list_of_users.each do |a_user| %>
  <tr>
    <td> <%= a_user.username %> </td>
    <td> <%= a_user.private.humanize %> </td>
    <% if @current_user != nil %>
      <td> 
        <form action ="/insert_follow_request/<%=a_user.id%>">
        <label for = "new_follow_request"> </label>
        <input id = "new_follow_request" type="hidden">
        <button> Follow </button> 
      </td>
      <% else %>
      <td> </td>
    <% end %>
    <td> <a href = "/users/<%=a_user.username%>"> Show details </a> </td>
  </tr>
<% end %>
  
</table>