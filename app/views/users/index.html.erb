<h1> List of users </h1>

<table border = "1">
<tr>
  <th>
    Username
  </th>
  
  <th>
    Private?
  </th>
  
  <th>
  Follow?
  </th>
  
  <th>
  User Profile
  </th>
</tr>

<% @list_of_users.each do |a_user| %>
  <tr>
    <td> <%= a_user.username %> </td>
    <td> <%= a_user.private.humanize %> </td>
    <td> <h3> Follow </h3> </td>
    <td> <a href = "/users/<%=a_user.username%>"> Show details </a> </td>
  </tr>
<% end %>
  
</table>