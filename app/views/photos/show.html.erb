<div>
  <div>
    <h1>
      Photo Details
    </h1>

    <dl>
    
      <dt>
        Image
      </dt>
      <dd>
        <img src = "<%= @the_photo.image %>">
      </dd>  
    
      <dt>
        Caption
      </dt>
      <dd>
        <%= @the_photo.caption %>
      </dd>


      <dt>
        Owner
      </dt>
      <dd>
        <%= @the_photo.owner.username %>
      </dd>

      <dt>
        Posted
      </dt>
      <dd>
        <%= time_ago_in_words(@the_photo.created_at) %>
      </dd>

      <dt>
        Likes count
      </dt>
      <dd>
        <%= @the_photo.likes_count %>
      </dd>

      <dt>
        Comments count
      </dt>
      <dd>
        <%= @the_photo.comments_count %>
      </dd>

      <dt>
        Fans
      </dt>
      <dd>
        <% @the_photo.fans.each do |a_fan| %>
          <%= a_fan.username %>
          <% end %>
      </dd>
      
      <dt>
        Add a fan
      </dt>
      <dd>
          <a href = "/users"> Like </a> #need to change this 
      </dd>

    </dl>
  </div>
</div>

<hr>

<div> 

<h2> Comments </h2>

<table>

  <tr>
    <th> Commenter </th>
    <th> Comment </th>
    <th> Posted </th>
  </tr>    
  
  <% @the_photo.comments.each do |a_comment| %>
    <tr>
    <td> <%= a_comment.commenter.username %> </td>
    <td> <%= a_comment.body %> </td>
    <td> <%= time_ago_in_words(a_comment.created_at) %> </td>
    <tr>
  <% end %>

</div>
</table>

<h3> Add a new comment </h3>

<form action = "/insert_comment/<%= @the_photo.id %>">
  <label for = "new_comment"> Comment </label>
  <input id = "new_comment" type = "text" placeholder = "Enter a comment.." name = "query_body">
  <button> Add comment </button>
</form>